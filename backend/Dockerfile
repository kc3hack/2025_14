# syntax=docker/dockerfile:latest

# ğŸ”¹ ãƒ“ãƒ«ãƒ‰ç”¨ã‚¹ãƒ†ãƒ¼ã‚¸ï¼ˆPython 3.10 ãƒ™ãƒ¼ã‚¹ï¼‰
FROM --platform=linux/amd64 python:3.9.18-slim-bookworm AS builder

# å¿…è¦ãªãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã‚’ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl git build-essential libffi-dev libssl-dev \
    zlib1g-dev libbz2-dev libreadline-dev libsqlite3-dev sqlite3 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# ä½œæ¥­ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®ä½œæˆ
WORKDIR /app

# ä¾å­˜é–¢ä¿‚ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ã‚³ãƒ”ãƒ¼
COPY requirements.txt .

# `pip install` ã‚’ç›´æ¥å®Ÿè¡Œï¼ˆä»®æƒ³ç’°å¢ƒãªã—ï¼‰
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir python-dotenv \
    && pip install --no-cache-dir -r requirements.txt

# ğŸ”¹ å®Ÿè¡Œç’°å¢ƒï¼ˆæœ€é©åŒ–ã•ã‚ŒãŸè»½é‡ã‚¹ãƒ†ãƒ¼ã‚¸ï¼‰
FROM --platform=linux/amd64 python:3.9.18-slim-bookworm AS final

# å¿…è¦ãªãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã®ã¿ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
RUN apt-get update && apt-get install -y --no-install-recommends \
    libssl-dev libsqlite3-0 sqlite3 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# ä½œæ¥­ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®ä½œæˆ
WORKDIR /app

# `builder` ã‚¹ãƒ†ãƒ¼ã‚¸ã‹ã‚‰ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«æ¸ˆã¿ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã‚’ã‚³ãƒ”ãƒ¼
COPY --from=builder /usr/local/lib/python3.9/site-packages /usr/local/lib/python3.9/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³ã‚³ãƒ¼ãƒ‰ã‚’ã‚³ãƒ”ãƒ¼
COPY . .

# ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³èµ·å‹•
CMD ["python", "app.py"]
